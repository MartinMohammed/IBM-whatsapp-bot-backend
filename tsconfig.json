{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts", // Include all files under "src" directory
    "tests/**/*.test.ts" // Include all files ending with "test.ts" under "tests" directory
  ],
  "exclude": [
    "node_modules" // Exclude the "node_modules" directory
  ]
}
